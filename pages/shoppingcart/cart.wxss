.top_line{
    height: 12px;
    background-color: #EFEFF4;
    padding-top:10rpx;
}
.service-policy{
    width: 100%;
    height: 73rpx;
    background: #f4f4f4;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-around;
}
.service-policy .itemgroup{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.service-policy .imagestyle {
  width: 10rpx;
  height:10rpx;
}

.service-policy .item{
    font-size: 25rpx;
    padding-left:10rpx;
    color: #666;
}
.cart-box{
    padding-bottom: 10rpx;
  
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 180rpx;
    border-bottom: 2rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 40rpx;
    height: 40rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    padding-left: 10rpx;
    padding-top: 10rpx;
    width: 160rpx;
    height: 160rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    padding-top: 10rpx;
    line-height: 50rpx;
    overflow: hidden;
}
.cart-list .cart-pro-price{
    display: inline-block;
    float: right;
    color: red;
    height: 105rpx;
    line-height: 50rpx;
}
.cart-list .cart-count-box{
    position: absolute;
     border: 1rpx solid #aaa;
     border-radius: 5rpx;
    left: 285;
    bottom: 30rpx;
    width: 255rpx;
    height: 70rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 70rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    height: 100%;
}
.cart-count-num{
    width: 150rpx;
     border-left: 1rpx solid #aaa;
  border-right: 1rpx solid #aaa;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 20rpx 0 80rpx;
    box-sizing: border-box;
    background: gainsboro;
    color:black;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
   padding-left: 20rpx;
   margin-left: 30rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 45rpx;
  height: 45rpx;
}

.cart-no-data{
  width:100%;
  height:100%;
  padding:40rpx 0;
  color: #999;
  text-align: center;
}

.cart-footer-left{
    float: left;
    display:flex;
    direction: row;
}


.cart-footer-right{
    float: right;
    display:flex;
    direction: row;
}

