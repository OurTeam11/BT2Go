<import src="/wxSearch/wxSearch.wxml"/>
<view class="wxSearch-section">
   <view class="wxSearch-pancel">
       <icon class="weui-icon-search_in-box" type="search" size="15"></icon>
       <input bindinput="wxSearchInput" bindfocus="wxSerchFocus" value="{{wxSearchData.value}}" bindblur="wxSearchBlur" class="wxSearch-input" placeholder="在所有商品中搜索" />
       <button class="wxSearch-button" bindtap="wxSearchFn" size="mini" plain="true">搜索</button>
   </view>
</view>
<template is="wxSearch" data="{{wxSearchData}}"/>
