<!-- 信息部分开始 -->
<import src="../../../templates/citypicker/citypicker.wxml"/>
<form bindsubmit="formSubmit" report-submit="true">
<view class = "info">
<!-- 姓名部分 -->
<view class = "item">
<text>用户姓名</text>
<view class = "right">
<input type="text" name = "name"placeholder="{{name}}" focus="{{focus}}"/>
</view>
</view>

<!-- 电话部分 -->
<view class = "item">
<text>联系电话</text>
<view class = "right">
<input name="tel" type="number" placeholder="{{tel}}"  focus="{{focus}}"/>
</view>
</view>



<!-- 收货地址部分 -->
<view class = "item">
<text>所在区域</text>
<view class = "right" wx:if="{{!displayLocation}}" bindtap="translate"> 输入地区 </view>
<view class = "right" wx:else bindtap="translate"> {{province}} {{city}} {{county}} </view>
</view>

<!-- 详细地址部分 -->
<view class = "item">
<text>详细地址</text>
<view class = "right">
<input name="door" type="text" placeholder="{{door}}"  focus="{{focus}}"/>
</view>
</view>

<!-- 标签 -->
<view class = "item">
<text>地址标签</text>
<view class = "right">
<picker name = "area" class = "area" value="{{addrLabelindex}}" range="{{addrLabelRange}}" bindchange="addrLabelPickerBindchange">
 {{addrLabelRange[addrLabelindex]}}
</picker>

</view>
</view>

<template is="areaData" data="{{...item}}"/>

</view>
<!-- 信息部分结束 -->
<button class = "save" formType="submit" >保存</button>
</form>