@import "/uitemplates/listview.wxss";

.search-bar_top {
  align-items: center;
  float: center;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 80rpx;
}

.container {
    background-color: #F2f2f2;
}
swiper {
  height:170px;
}
swiper-item image {
    height: 100%;
    width: 100%;
    display: inline-block;
    overflow: hidden;
} 

.line_flag {
    width: 6px;
    height: 23px;
    margin-right: 5px;
    display: inline-block;
    background-color: #f9f027;
}
.recommend_text_style{
  font-size: 16px;
  color: black;
  
}
view.text {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
}

.loading{
  padding: 10rpx;
  padding-bottom: 20rpx;  
  text-align: center;  
}  

.scrollviewclass {
  margin-top: 90rpx;
  width:100%;
  height:100%;
}

.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}