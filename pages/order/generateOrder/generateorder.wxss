.top_line{
    height: 10px;
    background-color: #EFEFF4;
}
.no_address_list{
    font-size: 15px;
    padding: 10px;
    text-color:red;
    border-bottom: 10px solid silver;
    border-bottom-color: #EFEFF4;
}

.order_addr_image{
  width:50rpx;
  height:50rpx;
  padding:3rpx;
  padding-left: 30rpx;
}

.order_addressinfo{
  background-color: #fff;
  border-bottom:1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
  padding-top:25rpx;
  padding-bottom: 25rpx;
  font-size:30rpx;
}
.goods_info{
    display: flex;
    min-height: 100px;
}
.image_icon{
    display: flex;
    margin-left: 10px;
    max-height: 100px;
    max-width: 80px;
}
.goods_infos{
    display: flex;
    flex-direction: column;
    }
.text_style_1{
    padding: 5px 10px 0 10px;
    font-size: 15px;
    line-height: 1.5em;
}
.text_style_2{
    padding: 10px 10px 0 10px;
    font-size: 12px;
    color: #B3B3B3;
}
.text_style_3{
    padding: 10px 10px 0 10px;
    font-size: 15px;
    color: red;
}
.order_info{
    font-size: 13px;
    border-top: 0.5px solid silver;
    border-top-color: #EFEFF4;
    padding: 10px;
    display: flex;
    justify-content: space-between;
}
.order_info_right_color{
    color: #939393;
    font-size: 12px;
    padding-top: 1px;
}
.coupon{
    font-size: 13px;
    border-top: 10px solid silver;
    border-top-color: #EFEFF4;
    border-bottom: 10px solid silver;
    border-bottom-color: #EFEFF4;
    padding: 10px;
    display: flex;
    justify-content: space-between;
}
.bottom_text_1{
    padding: 10px 10px 0px 10px;
    font-size: 13px;
    display: flex;
    justify-content: space-between;
}
.bottom_text_2{
    padding: 5px 10px 0px 10px;
    font-size: 13px;
    display: flex;
    justify-content: space-between;
}
.bottom_text_3{
    padding: 5px 10px 10px 10px;
    font-size: 13px;
    display: flex;
    justify-content: space-between;
}
.true_pay{
    padding: 10px;
    border-top: 0.5px solid silver;
    border-top-color: #EFEFF4;
    display: flex;
    flex-direction: row-reverse;
}
.true_pay_right{
    color: red;
}
.bottom_btn{
    margin: 5px 10px 10px 10px;
}
.right_text{
    color: red;
}