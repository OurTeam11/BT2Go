.top_line{
    margin-top: 10px;
    margin-bottom: 2px;
    height: 15px;
    background-color: #EFEFF4;
}
.oneOrder {
  display: flex;
  flex-direction: column;
  padding:12rpx;
}

.order_container{
  width:100%;
  height:100%;
  display: flex;
  padding-right: 4rpx;
  padding-left: 4rpx;
  flex-direction: column;
  justify-content: flex-start;
}

.goods-tab-content {
  margin-top: 90rpx;
  width:100%;
  padding-left:3rpx;
  padding-right:3rpx;
}


.goods-tab-box {
    width:100%;
    position: fixed;
    background-color: #fff;
}
.goods-tab-nav{
    display: inline-block;
    width: 20%;
    font-size: 16px;
    height: 95rpx;
    line-height: 90rpx;
    border-bottom: 4rpx solid grey;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}

.goods-tab-nav.on{
    color: red;
    border-bottom: 6rpx solid red;
}



.bottom_line{
   margin-bottom: 10px;
   margin-top: 2px;
    height: 15px;
    background-color: #EFEFF4;
}

.order_icon{
    display: flex;
    padding-left: 10rpx;
    padding-top: 10rpx;
    max-height: 120rpx;
    max-width: 120rpx;
    justify-content: center;
}
.order_header{
    padding: 2px;
    display: flex;
    direction: row;
    justify-content: space-between;
}
.oneProduct{
  width:100%;
  display:flex;
  direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx;
}
.oneProductList{
  display:flex;
  direction: column;
  justify-content: space-between;
}
.split_line{
    height: 2px;
    background-color: gainsboro;
    width:100%;
}
.order_footer{
  display:flex;
  direction: row;
  justify-content: flex-end;
}
.order_footer2 {
  display:flex;
  direction: row;
  justify-content: space-around;
  border: 2px, solid, red;
}
.order_info_right_color{
    color: #939393;
    font-size: 12px;
    padding-top: 1px;
}
.text_style_1{
    color: gray;
    padding-top: 3px;
    padding-bottom : 3px;
    font-size: 11px;
    line-height: 1.5em;
}
.text_style_2{
    padding: 2px;
    margin-right:3px;
    font-size: 15px;
    color: black;
}
.text_style_3{
  margin-top: 3px;
  margin-bottom : 3px;
  border: 2px, solid, red;
  margin-left:3px;
  margin-right:3px;
  font-size: 12px;
  color: red;
  display: inline-block;
  
}
.loading {
  text-align: center;
  font-size: 30rpx;
  font-style: oblique;
  padding:10rpx;
}
.no_order {
  text-align: center;
  font-size: 50rpx;
  font-style: inherit;
  padding:15rpx;
}
