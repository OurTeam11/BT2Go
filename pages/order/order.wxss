.top_line{
    height: 10px;
    background-color: #EFEFF4;
    padding-top:10rpx;
}
.goods-tab-nav{
    display: inline-block;
    width: 25%;
    height: 110rpx;
    line-height: 90rpx;
    border-bottom: 3rpx solid yellow;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #bcaa8a;
    border-bottom: 5rpx solid #bcaa8a;
}

.goods-content{
    padding: 10rpx;
}

.order_icon{
    display: flex;
    margin-left: 8rpx;
    max-height: 100rpx;
    max-width: 100rpx;
    justify-content: center;
}
.order_header{
    border: 1px solid silver;
    padding: 2px;
    display: flex;
    direction: row;
    justify-content: space-between;
}
.oneProduct{
  width:100%;
  padding: 5rpx;
  display:flex;
  direction: row;
  justify-content: space-between;
}
.oneProductList{
  background-color: #EFEFF4;
  display:flex;
  direction: column;
  justify-content: space-between;
}
.split_line{
    height: 2px;
    background-color: rebeccapurple;
    padding-top:1px;
    padding-bottom: 1px;
}
.order_footer{
  display:flex;
  direction: row;
  justify-content: flex-end;
}
.order_footer2 {
  display:flex;
  direction: row;
  justify-content: flex-end;
}
.order_info_right_color{
    color: #939393;
    font-size: 12px;
    padding-top: 1px;
}
.text_style_1{
    color: gray;
    padding: 1px;
    font-size: 12px;
    line-height: 1.5em;
}
.text_style_2{
    padding: 2px;
    margin-right:3px;
    font-size: 16px;
    color: black;
}
.text_style_3{
  padding: 2px;
  margin-left:3px;
  margin-right:3px;
  font-size: 12px;
  line-height: 1.5em;
  color: red;
}
