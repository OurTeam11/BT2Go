/* pages/myinfo/my.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 2rpx 0;
  box-sizing: border-box;
} 
.userinfo_needlogin {
  padding-left: 20rpx;
}
.userinfo {
  width:100%;
  height:100px;
  background: gainsboro;
  border: 4rpx solid gainsboro;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}

.image_class {
  border: 2rpx solid rebeccapurple;
  width:100px;
  height:100px;
}

.separate {
  width: 100%;
  height: 10rpx;
  display: inline-block;
  margin: 10rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}

.line {
  width:100%;
  height:1px;
  margin-left: 30rpx;
  background-color: gainsboro;

}

/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}

.myorderall-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}

.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}

.navs {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height:150rpx;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: gray;
}

/* 列表 */
.mypersonal-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  width:100%;

}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: black;
  font-size:25rpx;
  margin-left: 20rpx;
}