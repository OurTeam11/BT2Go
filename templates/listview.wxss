.product_container{
    display:flex;
    flex-wrap: wrap;
    width:100%;
    
}
.product_item{
    width:49%;
    display:flex;
    flex-direction:column;
    box-sizing:border-box;
    align-items: center;
    padding-bottom:10px;
    padding-top:10px;
    padding-left: 10px;
    padding-right: 10px;
}
.navigator_item {
  display:flex;
    flex-direction:column;
    box-sizing:border-box;
    align-items: center;
}
.product_img {
    width:110px;
    height:100px;
    display:flex;
    align-items: center;
    justify-content: center;
}

.product_text {
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:left;
}
.product_description {
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-weight: bold;
  font-size: 13px;
  margin-left: 0rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient: vertical;
}
.product_name {
    padding-top:5rpx;
    padding-left: 20rpx;
    text-align: left;
    margin-left: 10rpx;
    font-size: 11px;
}

.product_price {
    padding-top:5rpx;
    padding-left: 20rpx;
    text-align: left;
    margin-left: 10rpx;
    font-size: 14px;
}
